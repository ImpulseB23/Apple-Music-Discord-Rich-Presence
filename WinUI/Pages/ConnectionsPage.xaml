<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AppleMusicRpc.Pages.ConnectionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent"
    Loaded="Page_Loaded">

    <ScrollViewer VerticalScrollBarVisibility="Hidden">
        <StackPanel Spacing="24" Padding="0,0,0,24">
            <!-- Title -->
            <TextBlock
                Text="Connections"
                Style="{StaticResource TitleTextBlockStyle}" />

            <!-- Discord Connection -->
            <StackPanel Spacing="12">
                <TextBlock
                    Text="DISCORD"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    CharacterSpacing="60" />

                <Border Padding="16" CornerRadius="8"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1">
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon Grid.Column="0" Glyph="&#xE8CF;" FontSize="24"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

                        <StackPanel Grid.Column="1" Spacing="2">
                            <TextBlock Text="Discord Rich Presence"
                                       Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TextBlock x:Name="DiscordStatus"
                                       Text="Checking..."
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <Ellipse x:Name="DiscordDot" Width="8" Height="8"
                                     Fill="{ThemeResource TextFillColorTertiaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Apple Music Connection -->
            <StackPanel Spacing="12">
                <TextBlock
                    Text="APPLE MUSIC"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    CharacterSpacing="60" />

                <Border Padding="16" CornerRadius="8"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1">
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon Grid.Column="0" Glyph="&#xE8D6;" FontSize="24"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

                        <StackPanel Grid.Column="1" Spacing="2">
                            <TextBlock Text="Apple Music Detection"
                                       Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TextBlock x:Name="AppleMusicStatus"
                                       Text="Checking..."
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <Ellipse x:Name="AppleMusicDot" Width="8" Height="8"
                                     Fill="{ThemeResource TextFillColorTertiaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Last.fm Connection -->
            <StackPanel Spacing="12">
                <TextBlock
                    Text="LAST.FM"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    CharacterSpacing="60" />

                <Border Padding="16" CornerRadius="8"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1">
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon Grid.Column="0" Glyph="&#xE93C;" FontSize="24"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

                        <StackPanel Grid.Column="1" Spacing="2">
                            <TextBlock Text="Last.fm Scrobbling"
                                       Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TextBlock x:Name="LastFmStatus"
                                       Text="Checking..."
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <Ellipse x:Name="LastFmDot" Width="8" Height="8"
                                     Fill="{ThemeResource TextFillColorTertiaryBrush}" />
                            <Button x:Name="ConfigureLastFmButton" Content="Configure"
                                    Click="ConfigureLastFm_Click" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Refresh Button -->
            <Button Click="Refresh_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE72C;" FontSize="14" />
                    <TextBlock Text="Refresh Status" />
                </StackPanel>
            </Button>
        </StackPanel>
    </ScrollViewer>
</Page>
