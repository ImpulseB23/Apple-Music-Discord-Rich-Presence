<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AppleMusicRpc.Pages.AppearancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Hidden">
        <StackPanel Spacing="24" Padding="0,0,0,24">
            <!-- Title -->
            <TextBlock
                Text="Appearance"
                Style="{StaticResource TitleTextBlockStyle}" />

            <!-- Theme Selection -->
            <StackPanel Spacing="12">
                <TextBlock
                    Text="THEME"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    CharacterSpacing="60" />

                <RadioButtons x:Name="ThemeSelector" SelectionChanged="ThemeSelector_SelectionChanged">
                    <RadioButton x:Name="SystemTheme" Content="Use system setting" Tag="Default" />
                    <RadioButton x:Name="LightTheme" Content="Light" Tag="Light" />
                    <RadioButton x:Name="DarkTheme" Content="Dark" Tag="Dark" IsChecked="True" />
                </RadioButtons>
            </StackPanel>

            <!-- Window Options -->
            <StackPanel Spacing="12">
                <TextBlock
                    Text="WINDOW"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    CharacterSpacing="60" />

                <ToggleSwitch
                    x:Name="AlwaysOnTopToggle"
                    Header="Always on top"
                    OffContent="Off"
                    OnContent="On"
                    Toggled="AlwaysOnTop_Toggled" />

                <ToggleSwitch
                    x:Name="CompactModeToggle"
                    Header="Start in mini mode"
                    OffContent="Off"
                    OnContent="On"
                    Toggled="CompactMode_Toggled" />

                <ToggleSwitch
                    x:Name="MinimizeToTrayToggle"
                    Header="Minimize to tray when closing"
                    OffContent="Exit app"
                    OnContent="Minimize"
                    Toggled="MinimizeToTray_Toggled" />

                <ToggleSwitch
                    x:Name="StartMinimizedToggle"
                    Header="Start minimized to tray"
                    OffContent="Off"
                    OnContent="On"
                    Toggled="StartMinimized_Toggled" />
            </StackPanel>

            <!-- Updates -->
            <StackPanel Spacing="12">
                <TextBlock
                    Text="UPDATES"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    CharacterSpacing="60" />

                <ToggleSwitch
                    x:Name="CheckUpdatesToggle"
                    Header="Check for updates automatically"
                    OffContent="Off"
                    OnContent="On"
                    Toggled="CheckUpdates_Toggled" />
            </StackPanel>

            <!-- Sidebar Options -->
            <StackPanel Spacing="12">
                <TextBlock
                    Text="SIDEBAR"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    CharacterSpacing="60" />

                <ToggleSwitch
                    x:Name="ExpandedSidebarToggle"
                    Header="Start with expanded sidebar"
                    OffContent="Off"
                    OnContent="On"
                    Toggled="ExpandedSidebar_Toggled" />
            </StackPanel>

            <!-- Note -->
            <Border Padding="12" CornerRadius="6"
                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE946;" FontSize="14"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <TextBlock
                        Text="Theme changes apply to this app only. System theme follows Windows settings."
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
