<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AppleMusicRpc.Pages.ShortcutsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Hidden">
        <StackPanel Spacing="24" Padding="0,0,0,24">
            <!-- Title -->
            <TextBlock
                Text="Keyboard Shortcuts"
                Style="{StaticResource TitleTextBlockStyle}" />

            <!-- Global Shortcuts -->
            <StackPanel Spacing="12">
                <TextBlock
                    Text="GLOBAL SHORTCUTS"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    CharacterSpacing="60" />

                <Border Padding="16" CornerRadius="8"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1">
                    <StackPanel Spacing="16">
                        <!-- Toggle Mini Mode -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Spacing="2">
                                <TextBlock Text="Toggle Mini Mode" Style="{StaticResource BodyTextBlockStyle}" />
                                <TextBlock Text="Show/hide the compact player widget"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                <Border Padding="6,4" CornerRadius="4"
                                        Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                    <TextBlock x:Name="MiniModeKey1" Text="Ctrl" Style="{StaticResource CaptionTextBlockStyle}" />
                                </Border>
                                <TextBlock Text="+" VerticalAlignment="Center"
                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                                <Border Padding="6,4" CornerRadius="4"
                                        Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                    <TextBlock x:Name="MiniModeKey2" Text="Alt" Style="{StaticResource CaptionTextBlockStyle}" />
                                </Border>
                                <TextBlock Text="+" VerticalAlignment="Center"
                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                                <Border Padding="6,4" CornerRadius="4"
                                        Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                    <TextBlock x:Name="MiniModeKey3" Text="M" Style="{StaticResource CaptionTextBlockStyle}" />
                                </Border>
                            </StackPanel>
                        </Grid>

                        <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                        <!-- Pause/Resume RPC -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Spacing="2">
                                <TextBlock Text="Pause/Resume RPC" Style="{StaticResource BodyTextBlockStyle}" />
                                <TextBlock Text="Toggle Discord presence on/off"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                <Border Padding="6,4" CornerRadius="4"
                                        Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                    <TextBlock x:Name="PauseRpcKey1" Text="Ctrl" Style="{StaticResource CaptionTextBlockStyle}" />
                                </Border>
                                <TextBlock Text="+" VerticalAlignment="Center"
                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                                <Border Padding="6,4" CornerRadius="4"
                                        Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                    <TextBlock x:Name="PauseRpcKey2" Text="Alt" Style="{StaticResource CaptionTextBlockStyle}" />
                                </Border>
                                <TextBlock Text="+" VerticalAlignment="Center"
                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                                <Border Padding="6,4" CornerRadius="4"
                                        Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                    <TextBlock x:Name="PauseRpcKey3" Text="P" Style="{StaticResource CaptionTextBlockStyle}" />
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Note -->
            <Border Padding="12" CornerRadius="6"
                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE946;" FontSize="14"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <TextBlock
                        Text="These shortcuts work globally, even when the app is minimized or in the background."
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
