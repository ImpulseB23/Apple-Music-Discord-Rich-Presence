<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AppleMusicRpc.Pages.StatisticsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Hidden">
        <StackPanel Spacing="24" Padding="0,0,0,24">
            <!-- Title -->
            <TextBlock
                Text="Statistics"
                Style="{StaticResource TitleTextBlockStyle}" />

            <!-- Session Stats -->
            <StackPanel Spacing="12">
                <TextBlock
                    Text="THIS SESSION"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    CharacterSpacing="60" />

                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Tracks Played -->
                    <Border Grid.Column="0" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel Spacing="4">
                            <TextBlock
                                x:Name="TracksPlayed"
                                Text="0"
                                Style="{StaticResource TitleTextBlockStyle}" />
                            <TextBlock
                                Text="Tracks"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Border>

                    <!-- Time Listened -->
                    <Border Grid.Column="1" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel Spacing="4">
                            <TextBlock
                                x:Name="TimeListened"
                                Text="0m"
                                Style="{StaticResource TitleTextBlockStyle}" />
                            <TextBlock
                                Text="Listened"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Border>

                    <!-- Scrobbles -->
                    <Border Grid.Column="2" Padding="16" CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1">
                        <StackPanel Spacing="4">
                            <TextBlock
                                x:Name="Scrobbles"
                                Text="0"
                                Style="{StaticResource TitleTextBlockStyle}" />
                            <TextBlock
                                Text="Scrobbles"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- Top Artists This Session -->
            <StackPanel Spacing="12">
                <TextBlock
                    Text="TOP ARTISTS"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    CharacterSpacing="60" />

                <Border Padding="16" CornerRadius="8"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1">
                    <StackPanel x:Name="TopArtistsList" Spacing="8">
                        <TextBlock
                            x:Name="NoArtistsText"
                            Text="No artists yet. Play some music!"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- App Uptime -->
            <StackPanel Spacing="12">
                <TextBlock
                    Text="APP INFO"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    CharacterSpacing="60" />

                <Border Padding="16" CornerRadius="8"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Text="Session uptime"
                            Style="{StaticResource BodyTextBlockStyle}" />
                        <TextBlock
                            x:Name="Uptime"
                            Grid.Column="1"
                            Text="0:00:00"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
